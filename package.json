{
  "name": "jons-sudoku-solver",
  "version": "1.0.1",
  "description": "This package uses a wave collapse algorithm to solve Sudoku puzzles.",
  "main": "lib/index.js",
  "files": [
    "lib/**/*"
  ],
  "scripts": {
    "test": "jest --verbose false --config jestconfig.json",
    "build": "tsc",
    "format": "prettier --write \"src/**/*.ts\"",
    "lint": "tslint -p tsconfig.json",
    "prepare": "npm run build",
    "prepublishOnly": "npm test && npm run lint",
    "preversion": "npm run lint",
    "version": "npm run format && git add -A src",
    "postversion": "git push && git push --tags",
    "bump-patch": "npm version patch"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jpmasters/jons-sudoku-solver.git"
  },
  "keywords": [
    "algorithm",
    "solver",
    "recursion",
    "backtracking",
    "sudoku-solver",
    "sudoku",
    "recursive",
    "recursive-algorithm",
    "non-recursive wave-collapse",
    "fast"
  ],
  "author": "Jon Masters",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/jpmasters/jons-sudoku-solver/issues"
  },
  "homepage": "https://github.com/jpmasters/jons-sudoku-solver#readme",
  "devDependencies": {
    "@babel/core": "^7.18.5",
    "@babel/preset-env": "^7.18.2",
    "@babel/preset-typescript": "^7.17.12",
    "@types/jest": "^27.5.2",
    "babel-jest": "^28.1.1",
    "jest": "^28.1.0",
    "prettier": "^2.6.2",
    "ts-jest": "^28.0.3",
    "tslint": "^6.1.3",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^4.7.2"
  }
}